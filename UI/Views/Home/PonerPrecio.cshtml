@model Entities.clsPlanta

@{
    ViewData["Title"] = "PonerPrecio";
}

<h1>Establece el precio</h1>

<div>

    <hr />
    <div class="col-md-4">
        <form asp-action="PonerPrecio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <dt class="form-control">
                    <h4> <label asp-for="NombrePlanta" class="control-label">Nombre</label></h4>
                </dt>
                <dl class="form-control">
                    @Html.DisplayFor(x => @Model.NombrePlanta)
                </dl>
            </div>
            <div class="form-group">
                <dt class="form-control">
                    <h4><label asp-for="Descripcion" class="control-label">Descripción</label></h4>
                </dt>
                <dl class="form-control">
                    @Html.DisplayFor(x => @Model.Descripcion)
                </dl>
            </div>
            <div class="form-group">


                @{
                    if (ViewBag.error !=null)
                    {
                        @ViewBag.error
                    }
                    if (Model.Precio == 0.00)
                    {
                        <dt>
                            <h4><label asp-for="Precio" class="control-label">Precio</label></h4>
                        </dt>
                        <dl>
                            <input asp-for="Precio" class= "form-control" />
                            <input asp-for="IdPlanta" class="form-control" type="hidden" />
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </dl>


                    }
                    else
                    {
                        <dt>
                        <h4><label asp-for="Precio" class="control-label">Precio:    @Html.DisplayFor(x => Model.Precio) €</label></h4>
</dt>
                    }

                }

            </div>
            <div class="form-group">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Inicio</a>
</div>
