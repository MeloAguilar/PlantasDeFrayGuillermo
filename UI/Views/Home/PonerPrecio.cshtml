@model Entities.clsPlanta

@{
    ViewData["Title"] = "PonerPrecio";
}

<h1>Establece el precio</h1>

<div>

    <hr />
    <div class="col-md-4">
        <form asp-action="PonerPrecio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <dt class="form-control">
                    <h4> <label asp-for="NombrePlanta" class="control-label">Nombre</label></h4>
                </dt>
                <dl class="form-control">
                    @Html.DisplayFor(x => @Model.NombrePlanta)
                    @Html.HiddenFor(x => @Model.NombrePlanta)
                </dl>
            </div>
            <div class="form-group">
                <dt class="form-control">
                    <h4><label asp-for="Descripcion" class="control-label">Descripción</label></h4>
                </dt>
                <dl class="form-control">
                    @Html.DisplayFor(x => @Model.Descripcion)
                    @Html.HiddenFor(x => @Model.Descripcion)
                </dl>
            </div>
            <div class="form-group">


                @{
                    if (ViewBag.error != null)
                    {
                        @ViewBag.error

                    }
                    else if(ViewBag.Exito != null)
                    {
                        <h4>@ViewBag.Exito</h4>
                    }

                        <dt>
                            @Html.EditorFor(m => m.Precio)
                        </dt>
                        <dl>
                            @Html.HiddenFor(m => m.IdPlanta)
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </dl>


 
                }

            </div>
            <div class="form-group">
            </div>
        </form>
    </div>
</div>
