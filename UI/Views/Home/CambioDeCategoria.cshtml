@model UI.Models.CambioDeCategoriaVM
@using Entities

@{
    ViewData["Title"] = "CambioDeCategoria";
}

<h1>CambioDeCategoria</h1>
@if (ViewBag.Error != null)
{
    <h4>@ViewBag.Error</h4>
}
else if(@ViewBag.Exito != null)
{
    <h4>@ViewBag.Exito</h4>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CambioDeCategoria">
            <div>
                @Html.DropDownListFor(x => Model.CategoriaSeleccionada.IdCategoria, new SelectList(@Model.Categorias, "IdCategoria", "NombreCategoria", Model.CategoriaSeleccionada.NombreCategoria))

            </div>
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(m => m.CategoriaSeleccionada.IdCategoria)
                        </td>
                        <td>
                            @Html.DisplayNameFor(m => m.Plantas.ElementAt(1).IdPlanta)
                        </td>
                    </tr>

                </thead>
                <tbody>
                    @for (int i = 0; i < @Model.Plantas.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => m.Plantas[i].NombrePlanta)
                                @Html.HiddenFor(m => m.Plantas[i].IdPlanta)
                            </td>
                            <td>
                                @for (int j = 0; j < @Model.Categorias.Count; j++)
                                {
                                    @Html.HiddenFor(m => m.Categorias[j].IdCategoria)
                                    @if (Model.Plantas.ElementAt(i).IdCategoria == Model.Categorias.ElementAt(j).IdCategoria)
                                    {
                                        @Html.DisplayFor(m => m.Categorias[j].NombreCategoria)
                                    }

                                }
                            </td>
                            <td>
                                
                                @Html.CheckBoxFor(m => m.Plantas[i].SeleccionadaParaCambioDeCategoria)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


