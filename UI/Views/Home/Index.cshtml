@model UI.Models.IndexVM
@using Entities

@{
    ViewData["Title"] = "Index";
}

<h6>Elija una Categoría</h6>
<form method="post">
    <div class="row-col-md-11">

        
        @Html.DropDownListFor(x => Model.CategoriaSeleccionada.IdCategoria, new SelectList(@Model.ListaCategorias, "IdCategoria", "NombreCategoria", Model.CategoriaSeleccionada))
        
        <Input type="submit" value="Elegir Categoria">

    </div>
    
    <div>
        @if (@Model.ListaPlantasDeCategoriaSeleccionada.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            Nombre
                        </td>
                        <td>
                            Precio
                        </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in @Model.ListaPlantasDeCategoriaSeleccionada)
                    {
                        <tr>
                            <td>
                                @item.NombrePlanta
                            </td>

                            <td>
                                @item.Precio €
                            </td>


                            <td>
                                @Html.ActionLink("Modificar Precio", "PonerPrecio", new {  id=item.IdPlanta})
                            </td>

                        </tr>

                    }
                </tbody>
            </table>

        }
    </div>
    </form>
<div>
    <h6>¿Desea modificar las plantas de alguna categoría?</h6>
    <p>@Html.ActionLink("Modificar plantas de las categorias", "CambioDeCategoria", "Home") </p>
</div>

